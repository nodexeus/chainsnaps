# PostgreSQL Configuration
POSTGRES_USER=chainsnaps
POSTGRES_PASSWORD=change_me_to_secure_password
POSTGRES_DB=chainsnaps

# S3 Configuration (REQUIRED)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your_s3_access_key_here
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1

# API Configuration
API_TITLE=ChainSnaps API
API_VERSION=1.0.0
API_DESCRIPTION=API for managing blockchain snapshots in S3 storage
API_PORT=8000  # External port for the API

# Scanner Configuration
SCAN_ON_STARTUP=true
SCAN_INTERVAL_HOURS=6

# Logging
LOG_LEVEL=info
RELOAD=false  # Set to true for development with code watching